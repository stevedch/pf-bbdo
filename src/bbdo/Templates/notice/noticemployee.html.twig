{% extends 'notice/base.html.twig' %}

{% block content_primary %}

    <div class="container-fluid">

        <div class="col-lg-5 float-right"> {% if notice.DisplayImgNotice %}
                <img style="width: 100%;height: 201px;margin: 20px auto;" class="img-rounded img-thumbnail"
                     alt="Embedded Image" src="data:image/png;base64,{{ notice.DisplayImgNotice }}"/>
            {% else %}
                <img style="width: 100%;height: 201px;margin: 20px auto;"
                     src="http://placehold.it/350x250"
                     class="img-responsive img-rounded img-thumbnail" alt="Selecione una imagen">
            {% endif %}
        </div>
        <div class="col-lg-7 margin-top-h">
            <h4>{{ notice.nameNotice|upper }}
                <small>Publicado el {{ notice.createdAt|date|date('Y/m/d')|e }}</small>
            </h4>
        </div>
        <br/>

        <div class="col-lg-7 tex-padding">{{ notice.shortdescriptionNotice|capitalize }}</div>
        <div class="col-lg-12 tex-padding"> {{ notice.descriptionNotice|capitalize }}</div>
    </div>

{% endblock %}