{% extends 'notice/base.html.twig' %}

{% block content_primary %}

    <section class="container" style="margin: 6em auto;">
        {{ form_start(form) }}
        <article class="container-fluid row" style="margin: 5em auto;">
            <div class="col-lg-12 well  well-lg">
                <div class="col-lg-12 well well-sm"><h4 class="text-center">{{ 'PUBLICACION DE AVISOS' }}</h4></div>
                <br/>
                <div class="col-lg-3">
                    <div class="form-group">
                        {{ form_label(form.image_notice) }}
                        <div class="input-group">
                            <div class="input-group-addon"></div>{{ form_widget(form.image_notice) }}
                        </div>

                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="form-group">
                        {{ form_label(form.name_notice) }}
                        <div class="input-group">
                            <div class="input-group-addon"></div>{{ form_widget(form.name_notice) }}
                        </div>
                        {% if form.name_notice.vars.errors|length %}
                            <div class="errors">
                                <div class="indicator"></div>
                                {{ form_errors(form.name_notice) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="form-group">
                        {{ form_label(form.shortdescription_notice) }}
                        <div class="input-group">
                            <div class="input-group-addon"></div>{{ form_widget(form.shortdescription_notice) }}
                        </div>
                        {% if form.shortdescription_notice.vars.errors|length %}
                            <div class="errors">
                                <div class="indicator"></div>
                                {{ form_errors(form.shortdescription_notice) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="form-group">
                        {{ form_label(form.description_notice) }}
                        <div class="input-group">
                            <div class="input-group-addon"></div>{{ form_widget(form.description_notice) }}
                        </div>
                        {% if form.description_notice.vars.errors|length %}
                            <div class="errors">
                                <div class="indicator"></div>
                                {{ form_errors(form.description_notice) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-12">{{ form_widget(form._token) }} {{ form_widget(form.save) }}</div>
            </div>
        </article>

        {{ form_end(form) }}
    </section>
{% endblock %}