{% extends "document/base.html.twig" %}

{% block content_primary %}
    <section class="container row" style="margin: 0 auto;width: 70%;">
        <article class="container-fluid col-lg-12" style="margin-top: 5em;">
            {% spaceless %}
                {{ form_start(form) }}
                <div class="col-lg-12 well well-sm" style="padding: 12px">
                    <div class="col-lg-12 well well-sm" style="float: right;">
                        <h2 class="text-center">
                            <small>{{ title|trans }}</small>
                        </h2>
                    </div>
                    <div class="col-lg-12 well well-sm" style="padding: 12px;">
                        <div class="form-group">
                            {{ form_label(form.name_document) }}
                            <div class="input-group">
                            <span class="input-group-addon danger"><span
                                        class="glyphicon glyphicon-remove"></span></span>
                                {{ form_widget(form.name_document) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12 well well-sm" style="padding: 12px;">
                        <div class="form-group">
                            {{ form_label(form.shortdescription_document) }}
                            <div class="input-group">
                            <span class="input-group-addon danger"><span
                                        class="glyphicon glyphicon-remove"></span></span>
                                {{ form_widget(form.shortdescription_document) }}
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-6 well well-sm" style="padding: 12px;">
                        <div class="form-group">
                            {{ form_label(form.file) }}
                            <div class="input-group">
                            <span class="input-group-addon danger"><span
                                        class="glyphicon glyphicon-remove"></span></span>
                                {{ form_widget(form.file) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 well well-sm" style="padding: 12px;">
                        <div class="form-group">
                            {{ form_label(form.status_document) }}
                            <div class="input-group">
                            <span class="input-group-addon danger"><span
                                        class="glyphicon glyphicon-remove"></span></span>
                                {{ form_widget(form.status_document) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 well well-sm" style="float: right;">
                        <div class="form-group"><br>
                            {{ form_widget(form._token) }}
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                </div>
            {% endspaceless %}
        </article>
    </section>
{% endblock %}
