<div class="col-md-3">
    {% if new.DisplayImgNotice %}
        <img class="img-rounded img-responsive img-thumbnail
             img-continer" src="data:image/png;base64,{{ new.DisplayImgNotice }}"/>
    {% else %}
        <img src="{{ app.request.basepath }}/img/placeholder.gif"
             class="img-responsive img-rounded img-thumbnail img-continer"/>
    {% endif %}</div>

{% for i in 0..3 %}
    <div class="col-md-9"><h4></h4></div>
{% endfor %}
<div class="col-md-9">
    <h3>{{ new.nameNotice|trans|title }}
        <small style=" float: right;color: crimson;font-size: 12px;
">Publicado el: {{ new.createdAt|date('Y-m-d H:i:s') }}</small>
    </h3>
</div>
{% for i in 0..5 %}
    <div class="col-md-9"><h4></h4></div>
{% endfor %}
<div class="col-md-9" style="">
        <p style="color: #eee;" class="fontfamily">
            <i class="fa fa-quote-left fa-2x"></i>&nbsp;{{ new.shortdescriptionNotice|trans|capitalize|length > 350 ?new.shortdescriptionNotice|trans|capitalize|slice(0, 350) ~ '...' : new.shortdescriptionNotice|trans|capitalize }}
        </p>
</div>
<div class="col-lg-12" style="padding: 10px;"><a
            href="{{ path('bbdo_view_notice_employee',{'notice': new.idNotice }) }}"
            style="float: right; color: #eee;">Seguir leyendo..</a></div><br/>