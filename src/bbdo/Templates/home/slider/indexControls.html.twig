<a style="color: snow;" href="#">
    {% if new.DisplayImgNotice %}
        <img style="width: 50px;height: 50px; padding: 0;"
             class="img-rounded img-responsive img-thumbnail"
             src="data:image/png;base64,{{ new.DisplayImgNotice }}"/>
    {% else %}
        <img style="width: 50px;height: 50px; padding: 0;"
             src="http://placehold.it/350x250"
             class="img-responsive img-rounded img-thumbnail" alt="Selecione una imagen">
    {% endif %}
    <small>{{ new.nameNotice|trans|capitalize }}</small>
</a>